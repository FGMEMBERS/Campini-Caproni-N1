<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>planchet</object-name>
    <object-name>intcanopy1</object-name>
    <object-name>intcanopy2</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intverriere1</object-name>
    <object-name>intverriere2</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intverriere1</object-name>
    <object-name>intverriere2</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intverriere1</object-name>
    <object-name>intverriere2</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Campini-Caproni-N1/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.34906 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.57400 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Campini-Caproni-N1/Models/Interior/Panels/panel.xml</path>
    <offsets>
      <x-m> -1.93722 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.73988 </z-m>
    </offsets>
  </model>

 <!-- Canopy -->
  <animation>
    <name>IntCanopyAvant</name>
    <object-name>intcanopy1</object-name>
    <object-name>intverriere1</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntCanopyAvant</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 0.6 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>IntCanopyArriere</name>
    <object-name>intcanopy2</object-name>
    <object-name>intverriere2</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntCanopyArriere</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <factor> 0.6 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

